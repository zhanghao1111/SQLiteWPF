<Window x:Class="SQLiteWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SQLiteWPF"
        mc:Ignorable="d"
        Title="SQLiteWPF" Height="650" Width="800">
    <Grid >
        <TabControl >
            <TabItem Header="数据库">
                <Frame Source="View/数据库表格/CompanyView.xaml" ></Frame>
            </TabItem>
            <TabItem Header="网口客户端">
                <Frame Source="View/网口/Client.xaml"></Frame>
            </TabItem>
            <TabItem Header="网口服务端">
                <Frame Source="View/网口/Service.xaml"></Frame>
            </TabItem>
            <TabItem Header="串口测试">
                <Frame Source="View/Serial/SerialTest.xaml"></Frame> 
            </TabItem>
            <TabItem Header="测试">
                <TextBox x:Name="Test" Text="Test"  ></TextBox>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
